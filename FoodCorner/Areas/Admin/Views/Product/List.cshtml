@using FoodCorner.Areas.Admin.ViewModels.Product
@model List<ListItemViewModel>

<div class="container-fluid">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-start">
                </div>
                <h4 class="page-title">Products</h4>
            </div>
            <!--end page-title-box-->
        </div>
        <a asp-route="admin-product-add" class="mt-2 mb-2 btn btn-success">Add New Product</a>
        <!--end col-->
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row" style="flex-wrap:wrap;">
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="blog-card">
                            <img style="width:500px; height:200px; object-fit:cover;" src="~/@item.ImageUrl" alt="" class="img-fluid rounded" />
                            <span class="badge badge-purple px-3 py-2 bg-soft-primary fw-semibold mt-3">Photography</span>
                            <h4 class="my-3">
                                <a href="" class="">@item.Name</a>
                            </h4>
                            <p class="text-muted" style="height:250px; max-height:max-content;">@item.Description</p>
                            <hr class="hr-dashed">
                            <div class="d-flex justify-content-between">
                                <div class="meta-box">
                                    <div class="media">
                                        <div class="media-body align-self-center text-truncate">
                                            <h6 class="m-0 text-dark">₼@item.Price</h6>
                                        </div><!--end media-body-->
                                    </div>
                                </div><!--end meta-box-->   
                                <div class="d-flex justify-content-between aligin-items-center">
                                    <a class="btn btn-info" asp-route="admin-product-commentList" asp-route-id="@item.Id"><i class="fa-regular fa-comment"></i></a>
                                    <a class="btn btn-success" asp-route="admin-product-update" asp-route-Id="@item.Id"><i class="las la-pen text-dark font-16"></i></a>
                                    <form method="POST" asp-route="admin-product-delete" asp-route-id="@item.Id" id="book-form-@item.Id"></form>
                                    <button class="btn btn-danger" type="submit" form="book-form-@item.Id">
                                        <i class="las la-trash-alt text-dark font-16"></i>
                                    </button>
                                </div>
                            </div>
                        </div><!--end blog-card-->

                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!--end col-->
        }
    </div><!--end row-->

</div>