@using FoodCorner.Areas.Admin.ViewModels.Product
@model List<ProductCommentList>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Product Comments</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Comment</th>
                            <th>User Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var nav in Model)
                        {
                            <tr>
                                <td>@nav.Comment</td>
                                <td>@nav.UserFullName</td>
                                <td class="text-end">
                                    <form method="POST" asp-route="admin-product-deleteComment" asp-route-commentId="@nav.Id" id="book-form-@nav.Id"></form>
                                    <button style="background-color:none; border:none;" type="submit" form="book-form-@nav.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>