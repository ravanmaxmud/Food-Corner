@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using FoodCorner.Areas.Admin.ViewModels.Order
@model List<OrderProductListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            Orders
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Order Products</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>ProductImg</th>
                            <th>Total</th>
                            <th>ProductName</th>
                            <th>Persson Size</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>
                                <td><img style="width:50px; height:40px; object-fit:cover;"  src="~/@slider.ImgURl"/></td>
                                <td>@slider.Total</td>
                                <td>@slider.ProductName</td>
                                <td>@slider.PersonSize</td
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>
