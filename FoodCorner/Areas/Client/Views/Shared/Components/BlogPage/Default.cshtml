@using FoodCorner.Areas.Client.ViewModels.Home
@model List<BlogViewModel>

@foreach (var item in Model)
{
    <div class="p-b-63">
        <a asp-route ="client-singleBlog-index" asp-route-id="@item.Id" class="hov-img0 how-pos5-parent">
            <img style="height:500px; object-fit:cover;" src="~/@item.BlogFiles" alt="IMG-BLOG">

            <div class="flex-col-c-m size-123 bg9 how-pos5">
                <span class="ltext-107 cl2 txt-center">
                   @item.CreatedAt.ToString("dd")
                </span>

                <span class="stext-109 cl3 txt-center">
                    @item.CreatedAt.ToString("MMM") @item.CreatedAt.ToString("yyyy")
                </span>
            </div>
        </a>

        <div class="p-t-32">
            <h4 class="p-b-15">
                <a style="word-break: break-all;" asp-route="client-singleBlog-index" asp-route-id="@item.Id" class="ltext-108 cl2 hov-cl1 trans-04">
                  @item.Title
                </a>
            </h4>

            <p style="word-break: break-all;" class="stext-117 cl6">
             @item.Content
            </p>

            <div class="flex-w flex-sb-m p-t-18">
                <span class="flex-w flex-m stext-111 cl2 p-r-30 m-tb-10">
                    <span>
                        <span class="cl4">By</span> Admin
                        <span class="cl12 m-l-4 m-r-6">|</span>
                    </span>
                </span>

                <a href="blog-detail.html" class="stext-101 cl2 hov-cl1 trans-04 m-tb-10">
                    Continue Reading

                    <i class="fa fa-long-arrow-right m-l-9"></i>
                </a>
            </div>
        </div>
    </div>
}
