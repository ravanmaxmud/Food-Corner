@using FoodCorner.Areas.Client.ViewModels.Home
@model List<ProductListItemViewModel>

<div class="p-t-65">
	<h4 class="mtext-112 cl2 p-b-33">
		Featured Products
	</h4>

	<ul>
		@foreach (var item in Model)
		{
			<li class="flex-w flex-t p-b-30">
				<a asp-route="client-single-index" asp-route-id="@item.Id" class="featured-products wrao-pic-w size-214 hov-ovelay1 m-r-20">
					<img src="~/@item.MainImgUrl" alt="PRODUCT">
				</a>

				<div class="size-215 flex-col-t p-t-8">
					<a href="#" class="stext-116 cl8 hov-cl1 trans-04">
						@item.Name
					</a>

					<span class="stext-116 cl6 p-t-20">
						@item.Price
					</span>
				</div>
			</li>
		}

	</ul>
</div>