    <header>
        <div class="header-main">
            <div class="container">
              
                @await Component.InvokeAsync(nameof(Navbar))
            </div>
        </div>
        </div>
    </header>

    <div class="container">
        <div class="search-modal flex-c-m trans-04">
            <div class="container-search-header">
                <button class="search-close">
                    <i class="fa-solid fa-xmark"></i>
                </button>

                @using(Html.BeginForm("Search","Home",FormMethod.Get))
                {
                    <div class="d-none">
                        <b>Search By :</b>
                        @Html.RadioButton("searchBy","Name",true)<text>Name</text>
                        <br />
                    </div>
                    @Html.TextBox("search",null, new { @placeholder = "Search..." ,@class="search-box"})  
                }
            </div>
        </div>
    </div>



    @RenderBody()




