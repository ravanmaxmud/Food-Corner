@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using FoodCorner.Areas.Client.ViewModels.Home.Modal
@model ModalViewModel

    <div class="col-md-6 col-lg-7 p-b-30">
        <div class="p-l-25 p-r-30 p-lr-0-lg">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>
                <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                <div class="slick3 gallery-lb">
                @foreach (var item in Model.ImgUrl)
                {
                    <div class="item-slick3" data-thumb="/@item.ImageUrl">
                        <div class="pr-img-single wrap-pic-w pos-relative">
                            <img src="~/@item.ImageUrl" alt="IMG-PRODUCT">

                            <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/@item.ImageUrl">
                                <i class="fa fa-expand"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="col-md-6 col-lg-5 p-b-30">
    <div class="p-r-50 p-t-5 p-lr-0-lg">
        <h4 class="mtext-105 cl2 js-name-detail p-b-14">
            @Model.Title
        </h4>

        <span class="mtext-106 cl2">
            @if (Model.DiscountPrice != null)
            {
                <span class="newprice">₼@Model.DiscountPrice</span>
            }
            else
            {
                <span class="newprice">₼@Model.Price</span>
            }
        </span>

        <p class="stext-102 cl3 p-t-23">
            @Model.Description
        </p>

        <!--  -->
        <div class="p-t-33">
            <div class="flex-w flex-r-m p-b-10">
                <div class="size-203 flex-c-m respon6">
                    Size
                </div>

                <div class="size-204 respon6-next">
                    <div class="rs1-select2 bor8 bg0">
                        <select class="js-select2" asp-for="SizeId" asp-items="@(new SelectList(Model.Sizes, nameof(ModalViewModel.SizeViewModeL.Id), nameof(ModalViewModel.SizeViewModeL.Title)))">
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                </div>
            </div>

            <div class="flex-w flex-r-m p-b-10">
                <div class="size-204 flex-w flex-m respon6-next">
                    <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                        <div class="btn-num-product-down btn-minus cl8 hov-btn3 trans-04 flex-c-m">
                            <i class="fs-16 zmdi zmdi-minus"></i>
                        </div>

                        <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" value="@Model.Quantity">

                        <div class="btn-num-product-up btn-plus cl8 hov-btn3 trans-04 flex-c-m">
                            <i class="fs-16 zmdi zmdi-plus"></i>
                        </div>
                    </div>

                    <a asp-route="client-basket-add" asp-route-id="@Model.Id" class="add-product-to-basket-modal-btn   btn-add-cart flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                        Add to cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



