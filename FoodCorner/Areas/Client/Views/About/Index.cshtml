@using FoodCorner.Areas.Client.ViewModels.About\
@model IndexViewModel

	<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/Client/assets/images/Product/SekaTort2.jpeg');   background-position: center; background-repeat: no-repeat; background-size: cover;">
	<h2 class="ltext-105 cl0 txt-center">
		About Us
	</h2>
</section>


<!--Our Story-->
<section class="our-story" style="background-image: url(/Client/assets/images/Logo/backgorondStory.jpg);">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-12">
				<div class="story-title text-center">
					<h1>Our Story</h1>
				</div>
			</div>
			<div class="col-lg-12 col-12">
				<div class="story-content text-center">
					@foreach (var item in Model.Stories)
					{
						<p>@item.Contetn</p>
					}
					
				</div>
			</div>
		</div>
	</div>
</section>

<!--Content Page-->


<section class="our-team-member">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-12 mb-5">
				<div class="story-title text-center">
					<h1>Our Team Member	</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="sec-banner mt-3 mb-5 bg0">
		<div class="slick-banner">
			<div class="flex-w flex-c-m">
				@foreach (var item in Model.Teams)
				{
					<div class="col-lg-3 m-lr-auto respon4">
						<!-- Block1 -->
						<div class="block1 block-size wrap-pic-w">
							<img src="~/@item.MemberImageUrl" alt="IMG-BANNER">

							<div class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
								<div class="block1-txt-child1 flex-col-l">
									<span class="block1-name ltext-102 trans-04 p-b-8">
										@item.FullName
									</span>

									<span class="block1-info stext-102 trans-04">
										@item.CreatedAt.ToString("MMM/dd")
									</span>
								</div>

								<div class="block1-txt-child2 p-b-4 trans-05">
									<div class="block1-link block-icon stext-101 cl0 trans-09">
										<a class="block-icon" href="@item.Inistagram"><i class="fa-brands fa-instagram"></i></a>
										<a class="block-icon" href="@item.LinkEdin"><i class="fa-brands fa-linkedin"></i></a>
										<a class="block-icon" href="@item.FaceBook"><i class="fa-brands fa-facebook"></i></a>
									</div>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>




<section class="about-vidio">
	<video width="100%" height="500px" controls>
