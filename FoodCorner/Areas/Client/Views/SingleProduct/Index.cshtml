@using FoodCorner.Areas.Client.ViewCompanents
@using FoodCorner.Areas.Client.ViewModels.Home.Modal
@model ModalViewModel


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-route="client-home-index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="/assets/singleProduct.html" class="stext-109 cl8 hov-cl1 trans-04">
            Product Detail
        </a>
    </div>
</div>


<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-7 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>


                        <div class="slick3 gallery-lb">
                            @foreach (var item in Model.ImgUrl)
                            {
                                <div class="item-slick3" data-thumb="/@item.ImageUrl">
                                    <div class="pr-img-single wrap-pic-w pos-relative">
                                        <img src="~/@item.ImageUrl" alt="IMG-PRODUCT">

                                        <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="~/@item.ImageUrl">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-5 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                        @Model.Title
                    </h4>
                    <span class="mtext-106 cl2">
                        @if (Model.DiscountPrice != null)
                        {
                            <span class="newprice">₼@Model.DiscountPrice</span>
                        }
                        else
                        {
                            <span class="newprice">₼@Model.Price</span>
                        }
                    </span>

                    <!--  -->
                    <div class="p-t-33">
                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-203 flex-c-m respon6">
                                Size
                            </div>

                            <div class="size-204 respon6-next">
                                <div class="rs1-select2 bor8 bg0">
                                    <select class="js-select2" asp-for="SizeId" asp-items="@(new SelectList(Model.Sizes, nameof(ModalViewModel.SizeViewModeL.Id), nameof(ModalViewModel.SizeViewModeL.Title)))">
                                    </select>
                                    <div class="dropDownSelect2"></div>
                                </div>
                            </div>
                        </div>

                        <div class="flex-w flex-r-m p-b-10">
                            <div class="size-204 flex-w flex-m respon6-next">
                                <div class="wrap-num-product flex-w m-r-20 m-tb-10">
                                    <div class="btn-num-product-down btn-minus cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                    </div>

                                    <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product" value="1">

                                    <div class="btn-num-product-up btn-plus cl8 hov-btn3 trans-04 flex-c-m">
                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                    </div>
                                </div>

                                <a asp-route="client-basket-add" asp-route-id="@Model.Id" class="add-product-to-basket-single-btn btn-add-cart flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                    Add to cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="bor10 m-t-50 p-t-43 p-b-40">
            <!-- Tab01 -->
            <div class="tab01">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item p-b-10">
                        <a class="nav-link active" data-toggle="tab" href="#description" role="tab">Description</a>
                    </li>

                    <li class="nav-item p-b-10">
                        <a class="nav-link" data-toggle="tab" href="#information" role="tab">Additional information</a>
                    </li>

                    <li class="nav-item p-b-10">
                        <a class="nav-link" data-toggle="tab" href="#reviews" role="tab">Reviews (@Model.Comments.Count())</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content p-t-43">
                    <!-- - -->
                    <div class="tab-pane fade show active" id="description" role="tabpanel">
                        <div class="how-pos2 p-lr-15-md">
                            <p class="stext-102 cl6">
                              @Model.Description
                            </p>
                        </div>
                    </div>

                    <!-- - -->
                    <div class="tab-pane fade" id="information" role="tabpanel">
                        <div class="row">
                            <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                                <ul>
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Tags
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @foreach (var item in Model.Tags)
                                            {
                                                @($"{@item.Title},")
                                            }
                                        </span>
                                    </li>
                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                            Categories
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @foreach (var item in Model.Categories)
                                            {
                                                @($"{@item.Title},")
                                            }
                                        </span>
                                    </li>

                                    <li class="flex-w flex-t p-b-7">
                                        <span class="stext-102 cl3 size-205">
                                              Size
                                        </span>

                                        <span class="stext-102 cl6 size-206">
                                            @foreach (var item in Model.Sizes)
                                            {
                                                 @($"{@item.Title},") 
                                            }
                                        </span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- - -->
                    <div class="tab-pane fade" id="reviews" role="tabpanel">
                        <div class="row">
                            <div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
                                <div class="p-b-30 m-lr-15-sm">
                                    <!-- Review -->
                                    <div class="flex-w flex-t p-b-68">
                                        @foreach (var item in Model.Comments)
                                        {
                                            <div class="size-207">
                                                <div class="flex-w flex-sb-m p-b-17">
                                                    <span class="mtext-107 cl2 p-r-20">
                                                        @item.UserFullName
                                                    </span>
                                                </div>

                                                <p class="stext-102 cl6">
                                                    @item.Content
                                                </p>
                                            </div>
                                        }
                           
                                    </div>

                                    <!-- Add review -->
                                    <form method="post" asp-route="client-single-comment" asp-route-productId="@Model.Id" class="w-full">
                                        <h5 class="mtext-108 cl2 p-b-7">
                                            Add a review
                                        </h5>

                                        <div class="row p-b-25">
                                            <div class="col-12 p-b-5">
                                                <label asp-for="@Model.AddComments.Content" class="stext-102 cl3" for="review">Your review</label>
                                              @*  <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review" name="review"></textarea>*@
                                                <input asp-for="@Model.AddComments.Content" class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" />
                                            </div>
                                        </div>

                                        <button class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
                                            Submit
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Related Products -->
<section id="product-slider">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="ps-top">
                    <div class="dwontime">
                        <h2>Related Products</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="ps-carts">
            <div class="cart-box responsive mt-4">
                @foreach (var item in Model.Products)
                {
                    <div data-aos="fade-up" class="cart-img">
                        <div class="c-img-c">
                            <a asp-route="client-single-index" asp-route-id="@item.Id">
                                <img class="pamada"
                                 src="~/@item.MainImgUrl"
                                 alt="">
                            </a>
                            @if (item.DiscountPercent != null)
                            {
                                <div class="endirim">
                                    @item.DiscountPercent% OFF
                                </div>
                            }
                            <div class="add-cart">
                                <div class="add-cart-text">
                                    <a asp-route="client-basket-add" asp-route-id="@item.Id" class="add-product-to-basket-btn"><i class="fa-solid fa-cart-shopping"></i></a>
                                </div>
                                <div class="cart-eyes">
                                    <a asp-route="Product-GetModel" asp-route-id="@item.Id" class="js-show-modal1"><i class="fa-solid fa-eye"></i></a>
                                </div>
                                <div class="add-cart-text">
                                    <a href=""><i class="fa-solid fa-heart"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="cart-text text-start mt-3">
                            <a asp-route="client-single-index">@item.Name</a>
                            <div class="price">
                                @if (item.DiscountPrice != null)
                                {
                                    <span class="oldprice">₼@item.Price</span>
                                    <span class="newprice">₼@item.DiscountPrice</span>
                                }
                                else
                                {
                                    <span class="newprice">₼@item.Price</span>
                                }

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
