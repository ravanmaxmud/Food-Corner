@using FoodCorner.Areas.Client.ViewModels.Home;
@model BlogViewModel
<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="blog.html" class="stext-109 cl8 hov-cl1 trans-04">
            Single Blog : @Model.Title

        </a>
    </div>
</div>


<!-- Content page -->
<section class="bg0 p-t-52 p-b-20">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-12 p-b-80">
                <div class="p-r-45 p-r-0-lg">
                    <!--  -->
                    <div class="wrap-pic-w how-pos5-parent">
                        <img src="~/@Model.BlogFiles" alt="IMG-BLOG">

                        <div class="flex-col-c-m size-123 bg9 how-pos5">
                            <span class="ltext-107 cl2 txt-center">
                                @Model.CreatedAt.ToString("dd")
                            </span>

                            <span class="stext-109 cl3 txt-center">
                                @Model.CreatedAt.ToString("MMM")  @Model.CreatedAt.ToString("yyyy")
                            </span>
                        </div>
                    </div>

                    <div class="p-t-32">
                        <span class="flex-w flex-m stext-111 cl2 p-b-19">
                            <span>
                                <span class="cl4">By</span> Admin
                                <span class="cl12 m-l-4 m-r-6">|</span>
                            </span>

                            <span>
                                @Model.CreatedAt.ToString("dd") @Model.CreatedAt.ToString("MMM") ,@Model.CreatedAt.ToString("yyyy")
                                <span class="cl12 m-l-4 m-r-6">|</span>
                            </span>

                            <span>
                                @foreach (var item in Model.Tags)
                                {
                                    <span>@item.Title</span>
                                }
                                    <span class="cl12 m-l-4 m-r-6">|</span>
                            </span>
                        </span>

                        <h4 style="word-break: break-all;" class="ltext-109 cl2 p-b-28">
                            @Model.Title
                        </h4>

                        <p style="word-break: break-all;" class="stext-117 cl6 p-b-26">@Model.Content</p>
                    </div>

                    <div class="flex-w flex-t p-t-16">
                        <span class="size-216 stext-116 cl8 p-t-4">
                            Tags
                        </span>

                        <div class="flex-w size-217">
                            @foreach (var item in Model.Tags)
                            {
                                <a href="#" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
                                    @item.Title
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>