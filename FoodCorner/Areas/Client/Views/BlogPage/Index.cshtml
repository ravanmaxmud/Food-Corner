@using FoodCorner.Areas.Client.ViewCompanents;
	<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/Client/assets/images/Product/SekaTort2.jpeg');   background-position: center; background-repeat: no-repeat; background-size: cover;">
	<h2 class="ltext-105 cl0 txt-center">
		Blog
	</h2>
</section>


<!-- Content page -->
<section class="bg0 p-t-62 p-b-60">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-9 p-b-80">
				<div class="p-r-45 p-r-0-lg blog-pro">
					<!-- item blog -->
					@await Component.InvokeAsync(nameof(BlogPage),new { searchBy = ViewBag.SearchBy, search = ViewBag.Search })
					<!-- Pagination -->
				</div>
			</div>

			<div class="col-md-4 col-lg-3 p-b-80">
				<div class="side-menu">
					<div class="bor17 of-hidden pos-relative">
						@using (Html.BeginForm("Index", "BlogPage", FormMethod.Get))
						{
							<div class="d-none">
								<b>Search By :</b>
								@Html.RadioButton("searchBy","Title",true) <text>Name</text>
								<br />
							</div>


							@Html.TextBox("search", null, new { @class="stext-103 cl2 plh4 size-116 p-l-28 p-r-55", @placeholder="Search"})
							<button type="submit" class="flex-c-m size-122 ab-t-r fs-18 cl4 hov-cl1 trans-04">
								<i class="zmdi zmdi-search"></i>
							</button>
						}

					</div>
						@await Component.InvokeAsync(nameof(BlogPageCategory))

					@await Component.InvokeAsync(nameof(FeaturedProduct))

					@await Component.InvokeAsync(nameof(BlogPageTag))
				</div>
			</div>
		</div>
	</div>
</section>	