<div class="" id="account-info">
	<div class="myaccount-content">
		<h3>Account Details</h3>
		<div class="account-details-form">
			<form action="#">
				<div class="row">
					<div class="col-lg-6 col-12  mb-2">
						<input id="first-name" placeholder="First Name" type="text">
					</div>
					<div class="col-lg-6 col-12  mb-2">
						<input id="last-name" placeholder="Last Name" type="text">
					</div>
					<div class="col-12  mb-2">
						<input id="display-name" placeholder="Display Name"
							   type="text">
					</div>
					<div class="col-12  mb-2">
						<input id="email" placeholder="Email Address" type="email">
					</div>
					<div class="col-12  mb-2">
						<h4>Password change</h4>
					</div>
					<div class="col-12  mb-2">
						<input id="current-pwd" placeholder="Current Password"
							   type="password">
					</div>
					<div class="col-lg-6 col-12  mb-2">
						<input id="new-pwd" placeholder="New Password"
							   type="password">
					</div>
					<div class="col-lg-6 col-12  mb-2">
						<input id="confirm-pwd" placeholder="Confirm Password"
							   type="password">
					</div>
					<div class="col-12">
						<button class="btn btn-save">Save Changes</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>